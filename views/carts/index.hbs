{{#extends 'base'}}
{{#block 'content'}}
<a href="/checkout" class="btn btn-primary my-3">Checkout</a>
<h1>My Shopping Cart</h1>
<ul class="list-group">
    {{#each shoppingCart}}
        <li class="list-group-item my-3">
            <h4>{{this.poster.name}}</h4>
            <h5>Category: {{this.poster.category.name}}</h5>
            <h5>Cost: {{this.poster.cost}}</h5>
            <h5>Quantity{{this.quantity}}</h5>
            <form method="POST" action="/cart/{{this.poster_id}}/quantity/update">
                <input type="hidden" value="{{../csrfToken}}" name="_csrf" />
                <h5>
                    Quantity: <input type="text" name="newQuantity" value="{{this.quantity}}" style="width: 30px" />
                    <input type="submit" value="Update Quantity" class="btn btn-success btn-sm" />
                </h5>
            </form>
            <div>
                <a href="/cart/{{this.poster.id}}/remove" class="btn btn-danger">Remove</a>
            </div>
        </li>
    {{/each}}
</ul>

{{/block}}
{{/extends}}